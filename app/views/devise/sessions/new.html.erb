
<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center text-dark mt-5">Canteen Management </h2>
        <div class="card my-5">

          <div class="card-body cardbody-color p-lg-5">

            <div class="text-center">
              <img src="https://www.multispice.co.in/resources/Multispice-Junnar/images/background/thumbnails/restaurant.jpg" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">
            </div>
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
  
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email" %>
            </div>
            <div class="mb-3">
               <%= f.password_field :password, autocomplete: "current-password",class: "form-control",placeholder: "password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              
               <%= f.check_box :remember_me %>
               <%= f.label :remember_me %>
           <% end %>
            <%= f.submit "Log in", class: "btn btn-color px-5 mb-5 w-100" %>
         <% end %>
           <div id="emailHelp" class="form-text text-center mb-5 text-dark">
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<style>
  
.btn-color{
  background-color: #0e1c36;
  color: #fff;
  
}

.profile-image-pic{
  height: 200px;
  width: 200px;
  object-fit: cover;
}



.cardbody-color{
  background-color: #ebf2fa;
}

a{
  text-decoration: none;
}

</style>
