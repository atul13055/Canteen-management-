
<%= form_with model: @menu_card, remote: true do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div><br>

  <div>
    <%= form.label :desc %>
    <%= form.text_field :desc %>
  </div><br>

  <div >
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
  
  <div >
    <%= form.label :Image %>
    <%= form.file_field :image, multiple: true %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>






